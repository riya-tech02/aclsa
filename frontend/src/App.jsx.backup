import { useState } from "react";
import Login from "./pages/Login";
import Register from "./pages/Register";

const API = import.meta.env.VITE_API_URL;



export default function App() {
  const [messages, setMessages] = useState([
    { role: "agent", text: "Hello. I am ACLSA, your AI agent." }
  ]);
  const [input, setInput] = useState("");
  const [analysis, setAnalysis] = useState(null);
const [auth, setAuth] = useState(!!localStorage.getItem("token"));
const [mode, setMode] = useState("login");
  
  async function sendMessage() {
    if (!input.trim()) return;

    const userText = input;
    setMessages(m => [...m, { role: "user", text: userText }]);
    setInput("");

    const res = await fetch(`${API}/message`, {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({ user_id: "riya", message: userText })
    });

    const data = await res.json();

    if (typeof data.response === "string") {
  setMessages(m => [...m, { role: "agent", text: data.response }]);
} else {
  const summary =
    "Iâ€™ve analyzed your situation and created a plan with a recommended next action.";

  setMessages(m => [...m, { role: "agent", text: summary }]);
  setAnalysis(data.response);
}
if (!auth) {
  return mode === "login" ? (
    <>
      <Login onLogin={() => setAuth(true)} />
      <p onClick={() => setMode("register")}>Create account</p>
    </>
  ) : (
    <>
      <Register onRegister={() => setMode("login")} />
      <p onClick={() => setMode("login")}>Back to login</p>
    </>
  );
}

  }

  return (
    <div style={{ display: "flex", height: "100vh", background: "#020617", color: "#e5e7eb" }}>
      {/* CHAT */}
      <div style={{ flex: 1, padding: 16, overflowY: "auto" }}>
        <h2>ACLSA Agent</h2>
        {messages.map((m, i) => (
          <div
            key={i}
            style={{
              maxWidth: "70%",
              padding: 12,
              marginBottom: 10,
              borderRadius: 12,
              background: m.role === "user" ? "#38bdf8" : "#1e293b",
              color: m.role === "user" ? "#000" : "#fff",
              marginLeft: m.role === "user" ? "auto" : 0
            }}
          >
            <pre style={{ whiteSpace: "pre-wrap" }}>{m.text}</pre>
          </div>
        ))}

        <div style={{ display: "flex", gap: 10, marginTop: 20 }}>
          <input
            style={{ flex: 1, padding: 12, borderRadius: 8 }}
            placeholder="Talk to ACLSA..."
            value={input}
            onChange={e => setInput(e.target.value)}
            onKeyDown={e => e.key === "Enter" && sendMessage()}
          />
          <button
            onClick={sendMessage}
            style={{ padding: "12px 18px", borderRadius: 8, background: "#38bdf8", fontWeight: "bold" }}
          >
            Send
          </button>
        </div>
      </div>

      {/* ANALYSIS */}
      {analysis && (
        <div style={{ width: "35%", padding: 16, borderLeft: "1px solid #1e293b" }}>
          <h3>Agent Analysis</h3>
          <pre>{JSON.stringify(analysis, null, 2)}</pre>
        </div>
      )}
    </div>
  );
}
